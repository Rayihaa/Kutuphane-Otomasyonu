<UserControl x:Class="WpfApplication1.UControl.Uc_KitapTeslimi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication1.UControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0">
            <DataGrid BorderBrush="{x:Null}" BorderThickness="0" Background="{x:Null}">
            </DataGrid>
        </Border>
        <Border Grid.Row="1" Background="White">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{DynamicResource uc_TeslimGüncelleButon}" Content="Kaydet">
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
